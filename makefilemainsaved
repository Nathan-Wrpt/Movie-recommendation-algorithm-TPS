CC = gcc
CFLAGS = -Wall -Wextra -I./algo -I./bin_creation -I./util

SRC = mainSave.c \
      algo/graphcreation.c \
      bin_creation/movies.c \
      bin_creation/user.c \
      util/maxadvices.c

OBJ = $(SRC:.c=.o)

TARGET = mainsaved

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean

clean:
	rm -f $(OBJ) $(TARGET)